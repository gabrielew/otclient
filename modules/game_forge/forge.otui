ForgeWindow < MainWindow
  id: forgeWindow
  !text: tr('Exaltation Forge')
  anchors.horizontalCenter: parent.horizontalCenter
  size: 500 436
  @onEscape: modules.game_forge.offlineForge()

  FlatPanel
    id: panelButtons
    size: 468 36
    image-source: /images/ui/back-icons
    image-border: 1
    anchors.top: parent.top
    anchors.left: parent.left
    margin-left: 12
    margin-top: 12

    Button
      id: fusionButton
      anchors.top: parent.top
      anchors.left: parent.left
      size: 116 34
      margin-left: 1
      margin-top: 1
      image-source: /images/game/forge/fusionButton
      image-clip: 0 0 116 34
      $hover !checked:
        image-clip: 0 0 116 34
      $pressed:
        image-clip: 0 34 116 34
      $checked:
        image-clip: 0 34 116 34
      @onClick: loadMenu('fusionMenu')
    Button
      id: transferButton
      anchors.top: parent.top
      anchors.left: prev.right
      size: 116 34
      margin-left: 1
      margin-top: 1
      image-source: /images/game/forge/transferButton
      image-clip: 0 0 116 34
      $hover !checked:
        image-clip: 0 0 116 34
      $pressed:
        image-clip: 0 34 116 34
      $checked:
        image-clip: 0 34 116 34
      @onClick: loadMenu('transferMenu')
    Button
      id: conversionButton
      anchors.top: parent.top
      anchors.left: prev.right
      size: 116 34
      margin-left: 1
      margin-top: 1
      image-source: /images/game/forge/conversionButton
      image-clip: 0 0 116 34
      $hover !checked:
        image-clip: 0 0 116 34
      $pressed:
        image-clip: 0 34 116 34
      $checked:
        image-clip: 0 34 116 34
      @onClick: loadMenu('conversionMenu')
    Button
      id: historyButton
      anchors.top: parent.top
      anchors.left: prev.right
      size: 118 34
      margin-left: 1
      margin-top: 1
      image-source: /images/game/forge/historyButton
      image-clip: 0 0 116 34
      $hover !checked:
        image-clip: 0 0 116 34
      $pressed:
        image-clip: 0 34 116 34
      $checked:
        image-clip: 0 34 116 34
      @onClick: loadMenu('historyMenu')
  Panel
    id: contentPanel
    anchors.bottom: parent.bottom
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin: 5 11 49 12

  HorizontalSeparator
    id: separator
    anchors.top: prev.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 5
    margin-left: 12
    margin-right: 12

  Panel
    id: moneyPanel
    size: 130 20
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-left: 12
    margin-bottom: 12
    image-source: /images/ui/progress
    image-border: 7
    Panel
      image-source: /images/store/icon-goldcoin
      anchors.right: parent.right
      anchors.top: parent.top
      margin-top: 6
      margin-right: 3
    Label
      id: gold
      !text: tr('0')
      anchors.top: parent.top
      anchors.right: prev.left
      margin-right: 5
      margin-top: 3
      font: $var-cip-font
      color: $var-text-cip-color
      text-auto-resize: true

  Panel
    id: dustPanel
    size: 78 20
    anchors.bottom: parent.bottom
    anchors.left: prev.right
    margin-left: 5
    margin-bottom: 12
    image-source: /images/ui/progress
    image-border: 7
    Panel
      image-source: /images/store/icon-currency-dust
      anchors.right: parent.right
      anchors.top: parent.top
      margin-top: 8
      margin-right: 3
    Label
      id: dust
      !text: tr('0 / 100')
      anchors.top: parent.top
      anchors.right: prev.left
      margin-right: 5
      margin-top: 3
      font: $var-cip-font
      color: $var-text-cip-color
      text-auto-resize: true

  Panel
    id: sliversPanel
    size: 52 20
    anchors.bottom: parent.bottom
    anchors.left: prev.right
    margin-left: 5
    margin-bottom: 12
    image-source: /images/ui/progress
    image-border: 7
    Panel
      image-source: /images/store/icon-currency-sliver
      anchors.right: parent.right
      anchors.top: parent.top
      margin-top: 5
      margin-right: 2
    Label
      id: slivers
      !text: tr('0')
      anchors.top: parent.top
      anchors.right: prev.left
      margin-right: 5
      margin-top: 3
      font: $var-cip-font
      color: $var-text-cip-color
      text-auto-resize: true

  Panel
    id: exaltedcorePanel
    size: 52 20
    anchors.bottom: parent.bottom
    anchors.left: prev.right
    margin-left: 5
    margin-bottom: 12
    image-source: /images/ui/progress
    image-border: 7
    Panel
      image-source: /images/store/icon-currency-exaltedcore
      anchors.right: parent.right
      anchors.top: parent.top
      margin-top: 5
      margin-right: 2
    Label
      id: exaltedcore
      !text: tr('0')
      anchors.top: parent.top
      anchors.right: prev.left
      margin-right: 5
      margin-top: 3
      font: $var-cip-font
      color: $var-text-cip-color
      text-auto-resize: true

  Button
    id: close
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    !text: tr('Close')
    size: 40 20
    margin-bottom: 12
    margin-right: 12
    @onClick: modules.game_forge.offlineForge()