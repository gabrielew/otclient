ConvertionWindow < WindowPanel
  size: 153 255
  image-source: /images/ui/t2pixel-up-frame-borderimage
  image-border: 24
  Panel
    id: itemPanel
    size: 66 66
    anchors.top: parent.top
    anchors.horizontalCenter: parent.horizontalCenter
    margin-top: 25
    BigItem
      id: item
      anchors.fill: parent
      size: 66 66
      virtual: true
      draggable: false
  Panel
    id: itemCount
    size: 66 20
    anchors.top: itemPanel.bottom
    anchors.horizontalCenter: parent.horizontalCenter
    margin-top: 3
    image-source: /images/ui/progress
    image-border: 7
    Label
      id: amount
      text: 100
      anchors.top: parent.top
      anchors.left: parent.left
      margin-left: 19
      margin-top: 3
      text-auto-resize: true
      color: #d33c3c
    Panel
      id: img
      image-source: /images/game/forge/ui/icon-currency-dust
      anchors.left: prev.right
      anchors.top: parent.top
      margin-top: 7
      margin-left: 2
  UIWidget
    size: 25 15
    anchors.top: prev.bottom
    anchors.horizontalCenter: parent.horizontalCenter
    image-source: /images/arrows/icon-arrow-downlarge
    margin-top: 10

