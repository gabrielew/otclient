RerollButton < Panel
  size: 66 91
  Panel
    id: button
    size: 66 66
    anchors.top: parent.top
    anchors.horizontalCenter: parent.horizontalCenter
    UIButton
      id: rerollButton
      size: 66 66
      anchors.top: parent.top
      anchors.left: parent.left
      anchors.right: parent.right
      anchors.bottom: prev.top
      image-source: /images/game/prey/prey_reroll_up
      image-clip: 0 0 66 66
      @onMousePress: |
        if self:isOn() then
          self:getParent():recursiveGetChildById("time"):setMarginBottom(2)
          self:getParent():recursiveGetChildById("time"):setMarginLeft(4)
        end
      @onMouseRelease: |
        if self:isOn() then
          self:getParent():recursiveGetChildById("time"):setMarginBottom(3)
          self:getParent():recursiveGetChildById("time"):setMarginLeft(3)
        end
      $pressed:
        image-clip: 0 66 66 66
      $!on:
        image-clip: 0 132 66 66
      @onHoverChange: modules.game_prey.onHover(self)

    ProgressBar
      id: time
      size: 60 12
      anchors.bottom: parent.bottom
      anchors.left: parent.left
      margin-bottom: 3
      margin-left: 3
      image-source: /images/game/prey/timerProgress
      image-clip: 0 0 60 12
      color: #c0c0c0
      @onHoverChange: modules.game_prey.onHover(self)

      Label
        id: textLabel
        anchors.top: parent.top
        anchors.horizontalCenter: parent.horizontalCenter
        text-align: center
        font: verdana-11px-bold
        color: #c0c0c0
        text-auto-resize: true
        margin-top: 2

  GoldLabel
    id: price
    size: 66 20
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 3

